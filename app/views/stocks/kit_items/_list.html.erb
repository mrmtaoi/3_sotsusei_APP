<ul>
  <% if @kit_items.present? %>
    <% @kit_items.each do |kit_item| %>
      <li>
        <strong>アイテム:</strong> <%= kit_item.name %> |
        <strong>数量:</strong> <%= kit_item.quantity %>

        <div class="button-container3">
          <%= link_to "編集", stocks_emergency_kit_kit_item_path(kit_item.emergency_kit, kit_item), class: 'btn btn-secondary' %>
          <%= link_to "削除", stocks_emergency_kit_kit_item_path(kit_item.emergency_kit, kit_item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </div>
      </li>
    <% end %>
  <% else %>
    <p>バッグの中は空っぽです...</p>
  <% end %>
</ul>
