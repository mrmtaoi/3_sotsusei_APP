<h1>防災バッグ一覧</h1>

<% if @emergency_kits.present? %>
  <ul>
    <% @emergency_kits.each do |emergency_kit| %>
      <li><%= kit.owner.name %>の防災バッグ</li>
    <% end %>
  </ul>
  <div class="inner_container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "新しい防災バッグを追加", new_stocks_emergency_kit_path, class: 'btn btn-primary custom-btn' %></li>
      </ul>
    </nav>
  </div>
<% else %>
  <p>防災バッグは一つもありません...</p>
  <%= image_tag 'nostock.png', style: 'width: 500px; height: 500px; position: absolute; top: 300px; left: 500px;' %>
  <div class="inner_container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "新しい防災バッグを追加", new_stocks_emergency_kit_path, class: 'btn btn-primary custom-btn' %></li>
      </ul>
    </nav>
  </div>
<% end %>
